<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        >
        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2"

            >

            <TextView
                android:id="@+id/tv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="John McDonald"
                android:textStyle="bold"
                android:textSize="30sp"


                />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="*Los Angles,CA"
                android:textSize="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="10sp"
                />

            <Button
                android:id="@+id/btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Follow"
                android:background="@drawable/app"

                />

        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/j2"
            android:layout_weight="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/layout1"
        app:layout_constraintLeft_toLeftOf="parent"


        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="50dp"
            tools:ignore="MissingConstraints"

            >

            <TextView
                android:id="@+id/tv3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="34"
                android:textStyle="bold"
                android:textSize="20sp"

                />

            <TextView
                android:id="@+id/tv4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Posts"
                android:textSize="20dp"

                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/layout1"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="50dp"
            tools:ignore="MissingConstraints"

            >

            <TextView
                android:id="@+id/tv5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1256"
                android:textStyle="bold"
                android:textSize="20sp"

                />

            <TextView
                android:id="@+id/tv6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Followers"
                android:textSize="20dp"

                />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="30sp"
        app:layout_constraintTop_toBottomOf="@id/layout3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints"

        >

        <ImageView
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:src="@drawable/j1"

            />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:src="@drawable/j2"

            />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:src="@drawable/j5"
            />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:src="@drawable/j4"
            />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:src="@drawable/j5"
            />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="30sp"
        android:paddingRight="30sp"
        app:layout_constraintTop_toBottomOf="@id/layout5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints"

        >

        <ImageView
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:src="@drawable/i"

            />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:src="@drawable/b"

            />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:src="@drawable/wa"
            />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:src="@drawable/w"
            />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:src="@drawable/f"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout6"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About"
            android:textStyle="bold"
            android:textSize="30sp"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Him poetic eye.Searched any remedies. Trial.Was poverty a schemes him he dressing mountains and as surprise haven't subject and could a entered would in the of be not posts, doing the never publication legs"
            android:textSize="25sp"
            />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>